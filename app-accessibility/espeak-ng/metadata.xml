<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM 'http://www.gentoo.org/dtd/metadata.dtd'>
<pkgmetadata>
  <maintainer type="person">
    <email>sortsmill@crudfactory.com</email>
    <name>Barry Schwartz</name>
  </maintainer>
  <use>
    <flag name="async">enable support for async command
    processing</flag>
    <flag name="klatt">enable the Klatt formant synthesizer</flag>
    <flag name="speechplayer">enable the speechPlayer Klatt
    implementation</flag>
    <flag name="mbrola">enable the MBROLA speech synthesizer</flag>
    <flag name="extdict-ru">use the extended Russian Dictionary
    file</flag>
    <flag name="extdict-zh">use the extended Mandarin Chinese
    Dictionary file</flag>
    <flag name="extdict-zhy">use the extended Cantonese Chinese
    Dictionary file</flag>
    <flag name="pcaudiolib">use the pcaudiolib library for audio
    output</flag>
    <flag name="sonic">enable the sonic library to speed up the
    audio</flag>
  </use>
</pkgmetadata>
